<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".student.QrCodeScannerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_gps_not_fixed_black_24dp"
                android:tint="@color/scannerCrossHair"
                app:layout_heightPercent="20%"
                app:layout_marginLeftPercent="40%"
                app:layout_marginTopPercent="40%"
                app:layout_widthPercent="20%" />

            <ImageView
                android:src="@drawable/ic_crop_free_black_24dp"
                android:tint="@color/scannerCrossHair"
                app:layout_heightPercent="40%"
                app:layout_marginLeftPercent="30%"
                app:layout_marginTopPercent="30%"
                app:layout_widthPercent="40%" />
        </android.support.percent.PercentRelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scanner_instructions" />
</LinearLayout>
