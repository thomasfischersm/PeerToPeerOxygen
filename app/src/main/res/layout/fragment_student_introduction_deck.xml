<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.playposse.peertopeeroxygen.android.student.StudentIntroductionDeckFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/slideTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <TextView
        android:id="@+id/swipeLeftHintTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:gravity="center"
        android:text="@string/swipeLeftHint" />

    <Button
        android:id="@+id/closeIntroductionDeckButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/closeIntroductionDeckButtonLabel"
        android:visibility="gone" />

</LinearLayout>
